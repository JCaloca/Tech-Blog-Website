<!-- Dashboard for creating new posts -->
<h2>Create a New Post</h2>
<section class="form-box">
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title">
    </div>
    <div>
      <label for="content">Content</label>
      <input type="text" id="post-content">
    </div>
  </form>
</section>

<!--If user has post history shows previous Posts-->
{{#if posts.length}}
  <section>
    <h2>Post History</h2>
    <ul>
        {{#each posts as |post|}}
        <article class="post">
          <div class="post-title">
            <a href="/post/{{id}}"{{title}}></a>
          </div>
          <div>
            <strong>Post by {{user.username}}</strong>
          </div>
          <div>
            {{post_content}}
          </div>
        </article>
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>     
        {{/edit}}
    </ul>
  </section>
{{/if}}

<script src="/js/add-post.js"></script>
  