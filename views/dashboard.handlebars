<!-- Dashboard for creating new posts -->
<section>
  <h2>Create a New Post</h2>
  <form class="new-post-form">
    <div class="form-group">
      <label for="post-title">Post Title</label>
      <input type="text" class="form-control" id="post-title" name="post-title"/>
    </div>
    <div class="form-group">
      <label for="post-content">Content</label>
      <textarea name="post-content" id="post-content"></textarea>
    </div>
    <div>
      <button type="submit" class="btn btn-primary">Sign Up</button>
    </div>
  </form>
</section>

<!--If user has post history shows previous Posts-->
{{#if posts.length}}
  <section>
    <h2>Post History</h2>
    <ul>
        {{#each posts as |post|}}
        <article class="post">
          <div class="post-title">
            <a href="/post/{{id}}"{{title}}></a>
          </div>
          <div>
            <strong>Post by {{user.username}}</strong>
          </div>
          <div>
            {{post_content}}
          </div>
        </article>
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>     
        {{/edit}}
    </ul>
  </section>
{{/if}}

<script src="/js/add-post.js"></script>
  