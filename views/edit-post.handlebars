<div>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <section class="form-box">
  <form class="edit-post-form">
    <div>
      <div>Title</div>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <div>Content</div>
      
     <input name="post-comment" type="text" value="{{post.post_content}}"/>
    </div>
    <button type="submit" class="btn btn-primary">Update post</button>
    <button type="button" class="delete-post-btn btn btn-warning">Delete post</button>
  </form>
  </section>
</div>

{{> comments post.comments}}

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>